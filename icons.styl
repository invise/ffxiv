.job
    .job-icon
        height: 2rem
        left: 2rem
        overflow: hidden
        position: absolute
        top: 0px
        width: 2rem

        &::before,
        &::after
            box-sizing: border-box
            content: ""
            display: block
            position: absolute

    .job-icon-pld
        background-image: center-border(90deg, $color-icon, 0.9rem, 1.1rem)
        height: 2.2rem
        top: 0.4rem // micro-adjustment

        &::before
            border: 2px solid $color-icon
            border-radius: 50%
            height: 4.2rem
            left: 0px
            top: -2rem
            width: 2rem

        &::after
            border-top: 0.2rem solid $color-icon
            height: 1.8rem
            left: 0.1rem
            width: 1.8rem
            top: 0.1rem

    .job-icon-mnk
        left: 1.5rem
        height: 3rem
        top: 0.2rem // micro-adjustment
        width: 3rem

        &::before
            background-image: center-border(90deg, $color-icon, 0.5rem, 0.7rem)
            border-color: $color-icon
            border-style: solid
            border-width: 0px 0.2rem
            height: 1.6rem
            left: 0.7rem
            top: 0.4rem
            transform: rotate(45deg)
            width: 1.6rem

        &::after
            content: none

    .job-icon-war
        border-radius: 2.2rem/2.6rem
        box-shadow: inset 0px 0px 0px 0.2rem $color-icon
        height: 2.2rem
        left: 1.7rem
        top: 0.4rem // micro-adjustment
        width: 2.6rem

        &::before,
        &::after
            background-color: $color-ni
            border: 0.2rem solid $color-icon
            border-radius: 1.6rem
            height: 1.6rem
            left: 0.5rem
            top: -0.6rem
            width: 1.6rem

        &::after
            top: 1.3rem

    .job-icon-drg
        background-image: center-border(90deg, $color-icon, 4px, 6px), center-border(90deg, $color-icon, 10px, 12px)
        border-bottom: 0.2rem solid $color-icon
        height: 1rem
        left: 2.2rem
        overflow: visible
        top: 0.2rem // micro-adjustment
        width: 1.6rem

        &::before,
        &::after
            height: 2rem
            top: 0.4rem
            width: 1.6rem

        &::before
            border-left: 0.2rem solid $color-icon
            left: 0.3rem
            transform: rotate(-22.5deg)

        &::after
            border-right: 0.2rem solid $color-icon
            left: -0.3rem
            transform: rotate(22.5deg)

    .job-icon-brd
        border-color: $color-icon
        border-style: solid
        border-radius: 0px 0px 1.2rem 1.2rem
        border-width: 0.2rem 0.2rem 0.2rem 0px
        height: 2.4rem
        left: 2.1rem
        top: 0.3rem // micro-adjustment
        width: 1.8rem

        &::before
            background-image: center-border(90deg, $color-icon, 0.2rem, 0.4rem)
            border-color: $color-icon
            border-style: solid
            border-width: 0px 0.2rem
            height: 1.2rem
            left: 0.3rem
            top: 0.4rem
            width: 1rem

        &::after
            content: none

    .job-icon-whm
        border-right: 0.2rem solid $color-icon
        height: 1.3rem
        overflow: visible
        top: 1.4rem // micro-adjustment after 1.1rem
        width: 1.2rem

        &::before
            border-color: $color-icon
            border-style: solid
            border-width: 0px 0.2rem 0.2rem 0px
            border-radius: 12px
            height: 12px
            left: 0.5rem
            top: -1.1rem
            width: 12px

        &::after
            border: 0.2rem solid $color-icon
            border-radius: 0.2rem
            height: 0.4rem
            left: 0.8rem
            top: -0.8rem
            width: 0.4rem

    .job-icon-blm
        height: 3.0rem
        left: 2.2rem
        top: -0.1rem // micro-adjustment
        transform: rotate(45deg)
        width: 1.6rem

        span
            border: 0.2rem solid $color-icon
            border-radius: 1.6rem
            display: block
            height: 1.6rem
            left: 0px
            position: absolute
            top: 1.4rem
            width: 1.6rem

            &::before
                border-color: $color-icon
                border-style: solid
                border-width: 0px 0.2rem
                box-sizing: border-box
                content: ""
                display: block
                height: 1.2rem
                left: -0.2rem
                position: absolute
                top: -0.5rem
                width: 1.6rem

        &::before,
        &::after
            border: 0.2rem solid $color-icon
            border-radius: 0px 0px 50% 50%
            height: 2.4rem
            left: -0.3rem
            top: -1rem
            width: 1.2rem

        &::after
            left: 0.7rem

    .job-icon-smn
        border-bottom: 2px solid $color-icon
        border-radius: 2.6rem
        height: 2.6rem
        left: 1.3rem
        transform: rotate(-37.5deg)
        width: 2.6rem

        &::before,
        &::after
            border-color: $color-icon
            border-style: solid
            border-width: 0px 0px 0px 0.2rem
            height: 2rem
            left: 0.8rem
            top: 0.4rem
            transform: rotate(22.5deg)
            width: 1.6rem

        &::after
            border-width: 0px 0.2rem 0px 0px
            left: 0.2rem
            transform: rotate(-22.5deg)

    .job-icon-sch
        border-top: 2px solid $color-icon
        left: 23px
        overflow: visible
        top: 0.8rem // micro-adjustment
        width: 14px

        &::before,
        &::after
            border: 2px solid $color-icon
            border-radius: 14px
            height: 14px
            left: -8px
            top: -2px
            width: 14px

        &::after
            left: 8px

        span
            &::before,
            &::after
                background-color: $color-ni
                box-sizing: border-box
                content: ""
                display: block
                height: 4px
                left: -8px
                position: absolute
                top: -2px
                width: 6px
                z-index: 1

            &::after
                left: 16px

